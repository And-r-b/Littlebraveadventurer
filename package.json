{
  "name": "littlebraveadventurer",
  "version": "1.0.0",
  "description": "A Little Brave Adventure Game",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron --no-sandbox .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder --linux --win"
  },
  "build": {
    "appId": "com.littlebraveadventurer.app",
    "productName": "Little Brave Adventurer",
    "copyright": "Xray <andreas_rekvikburvald@hotmail.com>",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/test{,s}/**",
      "!node_modules/.bin",
      "!.git/**",
      "!.vscode/**",
      "!dist/**"
    ],
   "asarUnpack": [
    "node_modules/steamworks.js/**/*"
  ],

  "win": {
    "target": "nsis",
    "icon": "icons/smallknight.ico",
    "extraResources": [
      {
        "from": "node_modules/steamworks.js/bin/win64/steam_api64.dll",
        "to": "."
      }
    ]
  },

  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "icons/png/smallknight.png",
    "category": "Game",
    "extraResources": [
      {
        "from": "node_modules/steamworks.js/bin/linux64/libsteam_api.so",
        "to": "."
      }
    ]
  },

  "mac": {
    "target": "dmg",
    "icon": "icons/smallknight.icns",
    "extraResources": [
      {
        "from": "node_modules/steamworks.js/bin/osx/libsteam_api.dylib",
        "to": "."
      }
    ]
  }
},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/And-r-b/Littlebraveadventurer.git"
  },
  "author": {
    "name": "Xray",
    "email": "andreas_rekvikburvald@hotmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/And-r-b/Littlebraveadventurer/issues"
  },
  "homepage": "https://github.com/And-r-b/Littlebraveadventurer#readme",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "steamworks.js": "^0.4.0"
  }
}
